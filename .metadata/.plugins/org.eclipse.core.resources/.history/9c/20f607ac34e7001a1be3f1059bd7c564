#include <stdio.h>
#include <stdlib.h>

int main(void) {

	setbuf(stdout,NULL);

	int numeroUno;
	int respuestaScan;

	printf("Ingrese el primer numero: ");
	fflush(stdin);
	respuestaScan = scanf("%d", &numeroUno);
	printf("Respuesta Scan es %d - Numero 1: %d", respuestaScan, numeroUno);

}
